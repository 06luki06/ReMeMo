<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:id="@+id/LL_pauseScreen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tV_headline_pauseScreen"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:gravity="center"
        android:text="@string/tv_headline_pause"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iB_restart"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:background="@drawable/roundedcorners"
            android:contentDescription="@string/cD_iB_Restart"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:rotationY="180"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/restart" />

        <ImageButton
            android:id="@+id/iB_goToHowToPlay"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundedcorners"
            android:contentDescription="@string/cD_iB_goToHowToPlayMemory"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/info" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/iB_resume"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/roundedcorners"
            android:contentDescription="@string/cD_iB_resumeToGame"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/play" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iB_goToLevels"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:background="@drawable/roundedcorners"
            android:contentDescription="@string/cD_iB_goBackToTheLevels"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/menu" />

        <ImageButton
            android:id="@+id/iB_pause_settings"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundedcorners"
            android:contentDescription="@string/cD_iB_pauseScreen_goToSettings"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/settings" />
    </LinearLayout>
</LinearLayout>
</ScrollView>