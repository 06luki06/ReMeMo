<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LL_pauseScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tV_headline_pauseScreen"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/tv_headline_pause"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iB_restart"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_marginLeft="50dp"
            android:contentDescription="@string/cD_iB_Restart"
            android:rotationY="180"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/ic_menu_revert" />

        <ImageButton
            android:id="@+id/iB_goToHowToPlayMemory"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:contentDescription="@string/cD_iB_goToHowToPlayMemory"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/ic_dialog_info" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/iB_resume"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:contentDescription="@string/cD_iB_resumeToGame"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/ic_media_play" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="start"
            android:layout_marginLeft="50dp"
            android:contentDescription="@string/cD_iB_goBackToTheLevels"
            android:scaleType="fitXY"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />
    </LinearLayout>
</LinearLayout>