<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hintergrund"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tV_FlysLeft"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:background="@drawable/roundedcornertopleft"
            android:gravity="center"
            android:textColor="#403F3F"
            android:fontFamily="@font/fontdiner_swanky"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/iB_pauseScreen"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:background="@drawable/roundedcornertopright"
            android:contentDescription="@string/cD_iB_goToPauseScreen"
            app:srcCompat="@drawable/pause" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_Reaction_Lvl_4"
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/texfieldbackground"
        android:fontFamily="@font/fontdiner_swanky"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/bt_lv4"
        android:textSize="30sp" />

    <FrameLayout
        android:id="@+id/FL_gameboard"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textfieldrememo"
        android:fontFamily="@font/fontdiner_swanky"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tV_catched_Flies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/fontdiner_swanky"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/tV_flies_left" />

            <FrameLayout
                android:id="@+id/FL_catched_flys"
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="#403F3F">

            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tV_time_Left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/fontdiner_swanky"
                android:layout_gravity="end"
                android:textSize="20sp"
                android:text="@string/tV_time_left" />

            <FrameLayout
                android:id="@+id/FL_time_left"
                android:layout_width="50dp"
                android:layout_height="5dp"
                android:layout_gravity="center_vertical"
                android:background="#403F3F">

            </FrameLayout>
        </FrameLayout>
    </LinearLayout>


</LinearLayout>
