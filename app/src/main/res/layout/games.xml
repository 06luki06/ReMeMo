<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/highscore_games"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/iB_HighscoreLink"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/roundedcornertopleft"
            android:contentDescription="@string/cD_iB_goToHighscore"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/withhook" />

        <TextView
            android:id="@+id/tV_Placeholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tV_placeholder" />

        <ImageButton
            android:id="@+id/iB_SettingsLink"
            android:layout_width="15dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@drawable/roundedcornertopright"
            android:contentDescription="@string/cD_iB_goToSettings"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/settings" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_headline_games"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:gravity="center"
        android:text="@string/tv_headlingGameChoice"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_goToMemory"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:text="@string/bt_Memory"
        android:textColor="#403F3F"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_goToReaction"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:text="@string/bt_Reaction"
        android:textColor="#403F3F"
        android:textSize="20sp" />

    <Button
        android:id="@+id/bt_goToMotivity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/fontdiner_swanky"
        android:text="@string/bt_Motivity"
        android:textColor="#403F3F"
        android:textSize="20sp" />

</LinearLayout>