<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/highscore_games"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/iB_HighscoreLink"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#5A606A"
            android:contentDescription="@string/cD_iB_goToHighscore"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/tV_Placeholder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/tV_placeholder" />

        <ImageButton
            android:id="@+id/iB_SettingsLink"
            android:layout_width="15dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="#5A606A"
            android:contentDescription="@string/cD_iB_goToSettings"
            app:srcCompat="@android:drawable/ic_menu_manage" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_headline_games"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="@string/tv_headlingGameChoice"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_goToMemory"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="@string/bt_Memory" />

    <Button
        android:id="@+id/bt_goToReaction"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="@string/bt_Reaction" />

    <Button
        android:id="@+id/bt_goToMotivity"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:text="@string/bt_Motivity" />

</LinearLayout>